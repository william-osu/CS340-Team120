<h1>Show Constellations</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>Show ID</th>
            <th>Constellation ID</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the show_id, constellation_id }}
        {{#each Show_Constellations}}
        <tr>
            <td>{{this.show_id}}</td>
            <td>{{this.constellation_id}}</td>

            {{! DELETE form }}
            <form id='delete_show_constellations_form'>
                <input type='hidden' name='delete_show_id' value='{{this.show_id}}' />
                <input type='hidden' name='delete_constellation_id' value='{{this.constellation_id}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>


{{! CREATE form }}
<h2>Show Constellations</h2>
<form class='cuForm' id='create_show_constellations_form'>

    <label for='create_show_constellations_constellation_id'>Constellation id: </label>
    <select name='create_show_constellations_constellation_id' id='create_show_constellations_constellation_id'>
        <option value='NULL' selected>Select a Constellation name</option>
        <option value='NULL'>&lt; None &gt;</option>
        {{#each Constellations}}
        <option value='{{this.constellation_id}}' required>{{this.name}}</option>
        {{/each}}
    </select>


    <label for='create_show_constellations_show_id'>Show id: </label>
    <select name='create_show_constellations_show_id' id='create_show_constellations_show_id'>
        <option value='NULL' selected>Select a Title name</option>
        <option value='NULL'>&lt; None &gt;</option>
        {{#each Shows}}
        <option value='{{this.show_id}}' required>{{this.title}}</option>
        {{/each}}
    </select>
   
    <input type='submit' />
</form>


