<h1>Show Customers</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>Show ID</th>
            <th>Customer ID</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the show_id, customer_id}}
        {{#each Show_Customers}}
        <tr>
            <td>{{this.show_id}}</td>
            <td>{{this.customer_id}}</td>
            

            {{! DELETE form }}
            <form id='delete_show_customers_form'>
                <input type='hidden' name='delete_show_id' value='{{this.show_id}}' />
                <input type='hidden' name='delete_customer_id' value='{{this.customer_id}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
