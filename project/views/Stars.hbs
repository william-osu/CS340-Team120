        {{#each Constellations}}
        <option value='{{this.constellation_id}}' required>{{this.name}}</option>
        {{/each}}
    </select>


    <label for='update_star_proper_name'>Proper Name: </label>
    <input type='text' name='update_star_proper_name' id='update_star_proper_name' min='0' />

    <label for='update_star_temperature'>Temperature: </label>
    <input type='int' name='update_star_temperature' id='update_star_temperature'/>

    <label for='update_star_radius'>Radius: </label>
    <input type='int' name='update_star_radius' id='update_star_radius' min='0' />

    <label for='update_star_color'>Color : </label>
    <input type='text' name='update_star_color' id='update_star_color' min='0' />

    <label for='update_star_spectral_class'>Spectral Class: </label>
